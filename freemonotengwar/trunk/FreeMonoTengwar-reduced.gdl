table(substitution)
  pass(1)
    aha ZWJ tinco > aha_tinco:(1 2 3) _ _ ;
    hwesta ZWJ tinco > hwesta_tinco:(1 2 3) _ _ ;
    silme ZWJ aha > silme_aha:(1 2 3) _ _ ;
    ZWJ longCarrier > tehtaThinnas:(1 2) _ ;
    tehtaI tehtaI > tehtaY:(1 2) _ ;
    tehtaE tehtaE > tehtaEE:(1 2) _ ;
    tehtaIB tehtaIB > tehtaYB:(1 2) _ ;
    tehtaEB tehtaEB > tehtaEEB:(1 2) _ ;
    tehtaO tehtaO > tehtaOO:(1 2) _ ;
    tehtaU tehtaU > tehtaUU:(1 2) _ ;
    tehtaGrave tehtaGrave > tehtaDoubleGrave:(1 2) _ ;
    tehtaI tehtaO > tehtaI_tehtaO:(1 2) _ ;
    tehtaO tehtaI > tehtaI_tehtaO:(1 2) _ ;
    tehtaU tehtaI > tehtaI_tehtaU:(1 2) _ ;
    tehtaI tehtaU > tehtaI_tehtaU:(1 2) _ ;
  endpass;


  // --------------------------------------------------------------
  // Substitution table, pass 4: combining tehtaW
  pass(2)

    tehtaW > tehtaW_alt / _ AnyTehtar (Oomaup, tehtaW) ;
    tehtaW > tehtaW_alt / (Oomaup, tehtaW) AnyTehtar _ ;

  endpass;
  pass(3)

    (lambe,alda,lambeN) tehtaB > (lambe_tehtaB,alda_tehtaB,lambeN_tehtaB) _ / _ AnyTehtar _ ; // when I had glyph classes for these, XeTeX would produce errors

  endpass;
  pass(4)

    takespecialX tehtaX > tookspecialX _ / _ AnyTehtar _ ;
    lambe tehtaIB > lambe_tehtaIB _ / _ AnyTehtar _ ;
    lambe tehtaYB > lambe_tehtaYB _ / _ AnyTehtar _ ;

  endpass;

endtable;



table(position)
  pass(1)
    // This is a workaround for what seems to be a bug in XeTeX:
    (hwesta_tinco,silme_aha) { advance.x = 600m; };
  endpass;
  pass(2)
    // This isn't really necessary, but it is probably good form:
    ANY AnyTehta { attach{ to=@1; }; insert=true; } / _ ^ _ ;
  endpass;
